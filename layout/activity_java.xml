<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pozadina"
    tools:context=".JavaActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:id="@+id/prasanja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/naslovv"
                android:textColor="@color/lavender"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:textSize="40sp"/>

            <TextView
                android:id="@+id/prasanjaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Прво прашање:"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:textSize="20sp"/>

            <RadioGroup
                android:id="@+id/izbor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/prasanjaa"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/izbor1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Одговор 1"/>

                <RadioButton
                    android:id="@+id/izbor2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Одговор 2"/>

                <RadioButton
                    android:id="@+id/izbor3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Одговор 2"/>

                <RadioButton
                    android:id="@+id/izbor4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Одговор 2"/>

            </RadioGroup>

            <Button
                android:id="@+id/kopce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/izbor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/kopceee"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>